@require './config';

body {
    user-select: none;
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Chrome/Safari/Opera */
    -khtml-user-select: none; /* Konqueror */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* Internet Explorer/Edge */
    user-select: none;
}

pre {
    user-select: text;
    -webkit-touch-ctextout: text; /* iOS Safari */
    -webkit-user-select: text; /* Chrome/Safari/Opera */
    -khtml-user-select: text; /* Konqueror */
    -moz-user-select: text; /* Firefox */
    -ms-user-select: text; /* Internet Explorer/Edge */
    user-select: text;
}

.page-head {
    max-width: 740px;
    margin: 0 auto;
    padding: 0 20px;

    h1 {
        padding-top: 4.6rem;
        color: $textColor;
    }

    .tag {
        background: $accentColor;
        color: #fff;
        padding: 5px 10px;
        border-radius: 5px;
        margin-right: 10px;
    }

    .time {
        color: #999;
        margin-left: 10px;
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 0 5px;
    }
}

.back-top {
    position: fixed;
    right: 40px;
    bottom: 40px;

    ul {
        list-style: none;
        padding: 0;
        margin: 0;

        li {
            padding: 5px;
            background: #ddd;
            border-radius: 50%;
            margin-bottom: 10px;
            cursor: pointer;

            &:hover {
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
                background: #ccc;
            }

            img {
                width: 28px;
                display: block;
            }
        }
    }

    .wxcode {
        position: absolute;
        display: none;
        right: 50px;
        bottom: 10px;
        border: 2px solid #ccc;
        background-color: #ccc;

        img {
            width: 150px;
            display: block;
        }
    }

    .wxcode-show {
        display: block;
    }
}

.tooltip:hover {
    position: relative;

    &:before {
        content: attr(data-title);
        position: absolute;
        background: #444;
        white-space: nowrap;
        right: 46px;
        color: #fff;
        font-size: 0.8rem;
        padding: 0 5px;
        border-radius: 5px;
        top: 20%;
    }

    &:after {
        content: ' ';
        position: absolute;
        right: 40px;
        border-top: 7px solid transparent;
        border-bottom: 7px solid transparent;
        border-left: 8px solid #444;
        top: 30%;
    }
}
