@require './config';

body {
    background: #f6f6f6;
    user-select: none;
    -webkit-touch-callout: none; /* iOS Safari */
    -webkit-user-select: none; /* Chrome/Safari/Opera */
    -khtml-user-select: none; /* Konqueror */
    -moz-user-select: none; /* Firefox */
    -ms-user-select: none; /* Internet Explorer/Edge */
    user-select: none;
}

pre {
    user-select: text;
    -webkit-touch-ctextout: text; /* iOS Safari */
    -webkit-user-select: text; /* Chrome/Safari/Opera */
    -khtml-user-select: text; /* Konqueror */
    -moz-user-select: text; /* Firefox */
    -ms-user-select: text; /* Internet Explorer/Edge */
    user-select: text;
}

.page-head {
    max-width: 740px;
    margin: 0 auto;
    padding: 2rem 2.5rem;
    margin-top: 4.6rem;
    margin-bottom: 20px;
    background: #fff;

    h1 {
        color: $textColor;
        margin-top: 0;
    }

    .page-head-footer {
        text-align: right;

        .tags {
            float: left;
        }
    }
}

.page {
    .content {
        background: #fff;
        word-break: break-all;

        &:not(.custom) > *:first-child {
            margin-top: 0;
        }
    }

    .page-nav.content .inner {
        padding-bottom: 1rem;
        margin-bottom: 0;
    }

    .page-content {
        max-width: 960px;
        margin: 0 auto;
        padding: 2rem 2.5rem;
        display: flex;
        flex-direction: row-reverse;
        margin-top: 3.6rem;
    }

    .page-right {
        width: 240px;
        margin-left: 20px;
        flex-shrink: 0;
        margin-bottom: 20px;

        &>div {
            background-color: #fff;
            box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);

            &:hover {
                box-shadow: 0 14px 25px rgba(0, 0, 0, 0.16);
            }
        }

        .title {
            border-bottom: 1px solid #eee;
            padding: 10px;
            font-weight: 500;
            font-size: 1.1rem;
        }

        ul {
            list-style-type: none;
            padding: 10px;
            margin: 0;

            .active {
                background: #02884b;
            }

            li {
                display: inline-block;
                margin-bottom: 10px;
            }
        }
    }

    .list-content {
        flex-grow: 1;
    }

    .item-card {
        cursor: pointer;
        padding: 16px 20px;
        background: #fff;
        border-radius: 3px;
        box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
        margin-bottom: 30px;

        &:hover {
            box-shadow: 0 14px 25px rgba(0, 0, 0, 0.16);
        }

        h2 {
            margin-top: 0;
            padding-bottom: 1rem;
            white-space: nowrap;
            text-overflow: ellipsis;
            overflow: hidden;
            color: $accentColor;
        }

        .item-body {
            line-height: 1.7rem;
            padding: 0 0 10px 0;
            display: flex;
            justify-content: space-between;
            align-items: center;
            word-break: break-all;

            .item-img {
                width: 6rem;
                height: 5rem;
                flex-shrink: 0;
                display: inline-block;
                background-size: cover;
                background-repeat: no-repeat;
                margin-left: 10px;
            }
        }

        &::after {
            content: ' ';
            display: block;
            clear: both;
        }

        .card-footer {
            text-align: right;

            .tags {
                float: left;
            }
        }
    }
}

.tags {
    background: $accentColor;
    padding: 5px 10px;
    border-radius: 5px;
    margin-right: 10px;
    cursor: pointer;
    line-height: 20px;
    color: rgba(255, 255, 255, 0.8);

    &:hover {
        color: #fff;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.26);
    }
}

.time {
    white-space: nowrap;
    color: #999;
    margin-left: 10px;
    // border: 1px solid #ccc;
    border-radius: 10px;
    padding: 0 5px;
    line-height: 28px;
}

.back-top {
    position: fixed;
    right: 40px;
    bottom: 40px;

    ul {
        list-style: none;
        padding: 0;
        margin: 0;

        li {
            padding: 5px;
            background: #ddd;
            border-radius: 50%;
            margin-bottom: 10px;
            cursor: pointer;

            &:hover {
                box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
                background: #ccc;
            }

            img {
                width: 28px;
                display: block;
            }
        }
    }

    .wxcode {
        position: absolute;
        display: none;
        right: 50px;
        bottom: 10px;
        border: 2px solid #ccc;
        background-color: #ccc;

        img {
            width: 150px;
            display: block;
        }
    }

    .wxcode-show {
        display: block;
    }
}

.tooltip:hover {
    position: relative;

    &:before {
        content: attr(data-title);
        position: absolute;
        background: #444;
        white-space: nowrap;
        right: 46px;
        color: #fff;
        font-size: 0.8rem;
        padding: 0 5px;
        border-radius: 5px;
        top: 20%;
    }

    &:after {
        content: ' ';
        position: absolute;
        right: 40px;
        border-top: 7px solid transparent;
        border-bottom: 7px solid transparent;
        border-left: 8px solid #444;
        top: 30%;
    }
}

.home .hero img {
    max-height: 180px;
    border-radius: 50%;
    border: 5px solid #fff;
    box-shadow: 0 14px 25px rgba(0, 0, 0, 0.16);
    transition: 0.2s ease-in-out;

    &:hover {
        -webkit-transform: rotate(45deg);
        transform: rotate(45deg);
    }
}

.favorite-search {
    cursor: pointer;
    width: 10rem;
    color: lighten($textColor, 25%);
    display: inline-block;
    border: 1px solid darken($borderColor, 10%);
    border-radius: 2rem;
    font-size: 0.9rem;
    line-height: 2rem;
    padding: 0 0.5rem 0 2rem;
    outline: none;
    transition: all 0.2s ease;
    background: #fff url('../search.svg') 0.6rem 0.5rem no-repeat;
    background-size: 1rem;

    &:focus {
        cursor: auto;
        border-color: $accentColor;
    }
}

.page .favorite {
    flex-direction: row;
    padding: 0;
    margin-top: 0;
    max-width: 960px;
    margin: 0 auto;

    .favorite-list {
        display: flex;
        flex-wrap: wrap;
    }

    .item-card {
        height: 100px;

        &:nth-child(3n) {
            margin-right: 0;
        }

        width: 273px;
        margin-right: 10px;
        font-size: 0.8rem;

        h4 {
            margin: 0;
            margin-bottom: 10px;
            font-weight: bold;
            font-size: 0.9rem;
        }

        .item-body {
            padding: 0;
            line-height: 1.2rem;

            .item-img {
                height: 95px;
                width: 95px;
            }

            .item-content {
                color: #666;

                .tags {
                    padding: 2px 5px;
                }
            }
        }

        .card-footer {
            margin-top: 10px;
        }
    }
}